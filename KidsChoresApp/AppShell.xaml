<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="KidsChoresApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:root="clr-namespace:KidsChoresApp"
    xmlns:pages="clr-namespace:KidsChoresApp.Pages"
    xmlns:childPages="clr-namespace:KidsChoresApp.Pages.ChildPages"
    FlyoutBehavior="Disabled"
    Title="KidsChoresApp">

    <ShellContent
        Title="LOADING..."
        ContentTemplate="{DataTemplate pages:LoadingPage}"
        Route="LoadingPage" />

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />

    <TabBar Shell.TabBarTitleColor="DarkSlateBlue" Shell.BackgroundColor="AliceBlue" Shell.TabBarUnselectedColor="Black">
        <Tab  Route="HomePage" Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" />
        </Tab>
        <Tab Route="SettingsPage" Title="Settings" Icon="settings.png">
            <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" />
        </Tab>
    </TabBar>
</Shell>
