<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KidsChoresApp.Views.CustomActionSheet"
             BackgroundColor="AliceBlue"
             IsVisible="False">
    <VerticalStackLayout Padding="10" Spacing="10">
        <Label Text="Choose an Avatar" FontSize="24" HorizontalOptions="Center" />
        <Button Text="Capture a photo" Clicked="OnCapturePhotoClicked" />
        <Button Text="Choose from library" Clicked="OnChooseFromLibraryClicked" />
        <Button Text="Select from avatars" Clicked="OnSelectFromAvatarsClicked" />
        <Button Text="Cancel" TextColor="DarkOrange" Clicked="OnCancelClicked" />
    </VerticalStackLayout>
</ContentView>
