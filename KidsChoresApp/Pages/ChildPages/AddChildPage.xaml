<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KidsChoresApp.Pages.ChildPages.AddChildPage"
             Title="Add Child">

    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Name" />
            <Entry x:Name="NameEntry" Placeholder="Enter child's name" />

            <Label Text="Image URL" />
            <Entry x:Name="ImageEntry" Placeholder="Enter image URL" />

            <Label Text="Weekly Allowance" />
            <Entry x:Name="WeeklyAllowanceEntry" Placeholder="Enter weekly allowance" Keyboard="Numeric" />

            <Label Text="Child Passcode" />
            <Entry x:Name="PasscodeEntry" Placeholder="Enter passcode" IsPassword="True" />

            <Label Text="Verify Passcode" />
            <Entry x:Name="VerifyPasscodeEntry" Placeholder="Verify passcode" IsPassword="True" />

            <Button Text="Add Child" Clicked="OnAddChildClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>
